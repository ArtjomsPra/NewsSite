{% extends 'index.html.twig' %}

{% block body %}

    <section class="relative pb-20 pt-8 overflow-hidden bg-blue-100"> <!-- Add the bg-blue-100 class here -->
        <div class="relative container px-4 mx-auto">
            <div class="flex justify-center mx-48">
                <div class="grid gap-8 grid-cols-3">
                    {% for article in articles %}
                        <div class="pt-8 border-t-2 border-gray-200 text-left">
                            <div class="flex flex-nowrap">
                                <div class="w-auto px-4">
                                    <img src="https://placehold.co/180x180?text=News&font=roboto" alt="">
                                </div>
                                <div class="w-full">
                                    <div class="max-w-2xl">
                                        <form action="/author" method="GET">
                                            <p class="text-gray-400 pb-1">
                                                Published by
                                                <button name="authorId" value="{{ article.getUser().getId() }}"
                                                        class="font-semibold hover:text-black">
                                                    {{ article.getUser().getName() }}
                                                </button>
                                            </p>
                                        </form>

                                        <form action="/article" method="GET">
                                            <button type="submit" name="articleId" value="{{ article.getId() }}"
                                                    class="text-left text-xl font-bold tracking-tight text-gray-900 hover:text-gray-600">
                                                {{ article.getTitle()|capitalize }}
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

{% endblock %}